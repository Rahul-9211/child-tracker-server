            },
            "url": {
              "raw": "{{base_url}}/api/sms/{{smsId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "{{smsId}}"]
            },
            "description": "Update an SMS record"
          }
        },
        {
          "name": "Delete SMS",
